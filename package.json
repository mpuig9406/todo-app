{
  "name": "todo-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm rebuild better-sqlite3 && tsup src/server.ts --format esm --out-dir dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.0",
    "hono": "^4.4.0",
    "drizzle-orm": "^0.31.0",
    "better-sqlite3": "^11.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "drizzle-kit": "^0.22.0",
    "tsup": "^8.1.0",
    "tsx": "^4.15.0",
    "typescript": "^5.5.0",
    "wrangler": "^3.60.0",
    "@cloudflare/workers-types": "^4.20240614.0"
  }
}